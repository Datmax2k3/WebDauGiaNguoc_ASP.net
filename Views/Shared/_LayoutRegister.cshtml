    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var selectElement = document.getElementById("UserId");

            // Lưu trữ giá trị của option đầu tiên
            var firstOptionValue = selectElement.options[0].value;

            // Kiểm tra xem nội dung của option đầu tiên có trùng với các option khác không
            for (var i = 1; i < selectElement.options.length; i++) {
                // Nếu nội dung của option đầu tiên trùng với option khác
                if (selectElement.options[0].innerText === selectElement.options[i].innerText) {
                    // Thay đổi giá trị của option đầu tiên
                    selectElement.options[0].value = selectElement.options[i].value;
                    break;
                }
            }
        });
