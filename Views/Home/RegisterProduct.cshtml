@model WebDauGiaGiaNguoc.Models.Product

@{
    ViewData["Title"] = "RegisterProduct";
    Layout = "~/Views/Shared/_LayoutRegister.cshtml";
}

<div style="padding: 50px 200px">
    <h2>RegisterProduct</h2>

    <h4>Product</h4>
    <hr />
    <div class="row">
        <table style="width: 100%;">
            <tr>
                <td style="width: 50%;">
                    <div class="col-md-4" style="width:80%">
                        <form asp-action="RegisterProduct" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="ProductName" class="control-label"> Tên sản phẩm</label>
                                <input asp-for="ProductName" class="form-control" />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageUrl" class="control-label">Chọn ảnh</label>
                                <input readonly asp-for="ImageUrl" class="form-control" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                <input type="file" id="file-upload" name="file" class="form-control" style="border: none; padding: 0; margin: 0; width: 92px;" required />
                            </div>
                            <div class="form-group">
                                <label asp-for="StartingPrice" class="control-label">Giá khởi điểm</label>
                                <input asp-for="StartingPrice" class="form-control" />
                                <span asp-validation-for="StartingPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CurrentPrice" class="control-label">Nhập lại giá khởi điểm</label>
                                <input asp-for="CurrentPrice" class="form-control" />
                                <span asp-validation-for="CurrentPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EddingPrice" class="control-label">Giá mong muốn</label>
                                <input asp-for="EddingPrice" class="form-control" />
                                <span asp-validation-for="EddingPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StartTime" class="control-label">Thời gian bắt đầu đấu giá</label>
                                <input asp-for="StartTime" class="form-control" />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EndTime" class="control-label">Thời gian kết thúc đấu giá</label>
                                <input asp-for="EndTime" class="form-control" />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>
                            <div class="form-group" hidden>
                                <label asp-for="Status" class="control-label"></label>
                                <input asp-for="Status" value="Đang đấu giá" class="form-control" />
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                            <div class="form-group" hidden>
                                <label asp-for="ResultBidUser" class="control-label"></label>
                                <input readonly asp-for="ResultBidUser" value="Chưa có" class="form-control" />
                                <span asp-validation-for="ResultBidUser" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId" class="control-label"></label>
                                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                            </div>
                            <div class="form-group" hidden>
                                <label asp-for="UserId" class="control-label"></label>
                                <div style="width:30px; height:30px; color:red; float:right;"></div>
                                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId">
                                    <option>@User.Identity.Name</option>
                                </select>
                                <span asp-validation-for="UserId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </form>
                    </div>
                </td>
                <td style="width: 50%; text-align: center;">
                    <img style="width:70%;" src="~/img/RegisterProduct.jpg">
                </td>
            </tr>
        </table>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>